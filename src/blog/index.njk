---
layout: blank
title: All Posts
---


<div class="container max-w-4xl">

  {# --- Header --- #}

  <div class="pt-24 mb-24">
    <h1 class="text-4xl">{{ title }}</h1>
    {# {% if snippet %}
      <p class="text-2xl">{{ snippet }}</p>
    {% endif %} #}
  </div>

  {# --- Posts --- #}

  <div class="mb-24">

    {% for post in collections.posts %}
      <div class="max-w-xl mb-6 bg-white p-4 shadow-sm">
        <h2 class="text-2xl mb-4">
          <a href="{{ post.url }}">
            {{ post.data.title }}
          </a>
        </h2>
        {% if post.data.snippet %}
          <p class="mb-6">{{ post.data.snippet }}</p>
        {% endif %}
        <span class="block text-gray-blue font-sans text-sm">
          {{ post.date.toLocaleDateString("en-US", { day: "2-digit", month: "short", year: "numeric" }) }}
        </span>
      </div>
    {% endfor %}

  </div>
</div>
