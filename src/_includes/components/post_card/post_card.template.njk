<div class="max-w-xl mb-6 bg-white p-4 shadow-sm">
  {% if tags.length > 0 %}
    <div class="mb-4 text-sm">
      {{ tags | safe }}
    </div>
  {% endif %}
  <h2 class="text-2xl mb-1">
    <a href="{{ url }}" class="transition-all duration-300 hover:opacity-75">
      {{ data.title }}
    </a>
  </h2>
  {% if data.snippet %}
    <p class="mb-6">{{ data.snippet }}</p>
  {% endif %}
  <span class="block text-gray-blue font-sans text-sm">
    {{ date.toLocaleDateString("en-US", { day: "2-digit", month: "short", year: "numeric" }) }}
  </span>
</div>
