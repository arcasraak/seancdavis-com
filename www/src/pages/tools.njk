<div class="container max-w-6xl">

  {# --- Header --- #}

  <div class="pt-24 mb-24">
    <h1 class="text-4xl">{{ title }}</h1>
    {% if description %}
      <div class="text-2xl">{% markdown %}{{ description }}{% endmarkdown %}</div>
    {% endif %}
  </div>

  {# --- Feed --- #}

  <div class="mb-24">
    <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mb-8">
      {% for item in collections.tools %}
        {% content_card item=item %}
      {% endfor %}
    </div>
  </div>
</div>
